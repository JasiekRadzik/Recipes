<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="104dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="15dp"
            android:elevation="0dp"
            android:fontFamily="sans-serif"
            android:text="RECIPE TITLE"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_view_password"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="@android:color/transparent"
            android:fontFamily="@string/roboto_condensed_typeface_asset_path"
            android:inputType="textPersonName"
            android:paddingBottom="5dp"
            android:paddingTop="0dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/white"
            android:textSize="30sp" />

        <Space
            android:layout_width="1dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/text_view_course_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="15dp"
            android:elevation="0dp"
            android:fontFamily="sans-serif"
            android:text="COURSE TYPE"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/addRecipeCourseTypeCookbookSpinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/text_view_password"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="@android:color/transparent"
            android:fontFamily="@string/roboto_condensed_typeface_asset_path"
            android:paddingBottom="5dp"
            android:paddingTop="0dp"
            android:textColor="@android:color/black"
            android:textColorHint="@color/light_grey"
            android:textSize="30sp"
            style="@style/Widget.AppCompat.Spinner.Underlined"/>

        <Space
            android:layout_width="1dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/text_view_cookbook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="15dp"
            android:elevation="0dp"
            android:fontFamily="sans-serif"
            android:text="COOKBOOK"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/addRecipeTitleCookbookSpinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/text_view_password"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="@android:color/transparent"
            android:fontFamily="@string/roboto_condensed_typeface_asset_path"
            android:paddingBottom="5dp"
            android:paddingTop="0dp"
            android:textColor="@android:color/black"
            android:textColorHint="@color/light_grey"
            android:textSize="30sp"
            style="@style/Widget.AppCompat.Spinner.Underlined"/>

        <Space
            android:layout_width="1dp"
            android:layout_height="20dp" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonChooseStyleFragment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/button_add"
        android:gravity="center"
        android:text="@string/button_bottom_next_fragment"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>