<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgviewexample"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        app:srcCompat="@drawable/ab_solid_shadow_holo" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/imageViewDisplayImage"
        android:layout_marginEnd="87dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButtonChooseFromGallery3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:background="@color/white_transparent"
            android:cropToPadding="false"
            android:padding="20dp"
            android:src="@drawable/icon_gallery" />

        <ImageButton
            android:id="@+id/imageButtonTakeAPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="false"
            android:background="@color/white_transparent"
            android:cropToPadding="false"
            android:padding="20dp"
            android:src="@drawable/icon_take_photo" />

        <ImageButton
            android:id="@+id/imageButtonCancelPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="false"
            android:background="@color/white_transparent"
            android:cropToPadding="false"
            android:padding="20dp"
            android:src="@drawable/icon_delete_photo" />

    </LinearLayout>

</RelativeLayout>