<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent"
    android:elevation="0dp">

    <ImageView
        android:id="@+id/displayDocPreviewInRecipeUploadFragmentImageView"
        android:layout_width="300dp"
        android:layout_height="360dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/light_bronze_example" />

    <ProgressBar
        android:id="@+id/recipeProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayDocPreviewInRecipeUploadFragmentImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:indeterminate="false"
        android:max="100"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:progressTint="@color/primary" />

    <TextView
        android:id="@+id/textViewRecipeUploaded"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/recipeProgressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:gravity="center_vertical|center_horizontal"
        android:lineSpacingExtra="10sp"
        android:text="@string/recipe_uploaded"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>